\section*{Vector Calculus}
\begin{problem}
  Let $\v x, \v y \in \R^m$ and $\v A \in \R^{m \times m}$. Please derive from
  elementary scalar calculus the following useful properties. Write
  your final answers in vector notation.
\begin{enumerate}[label=(\alph*)]
    \item What is the gradient with respect to $\v x$ of $\v x^T \v y$?
    \item What is the gradient with respect to $\v x$ of $\v x^T \v x$?
    \item What is the gradient with respect to $\v x$ of $\v x^T \v A \v x$?
\end{enumerate}
\end{problem}

\noindent\textbf{Solution}

\noindent\textbf{(a)} Let $f = \v x^\top \v y = x_1y_1+...+x_my_m$. Then
\begin{align*}
\nabla_{\v x} f &= (\partial_{x_1}f, ..., \partial_{x_m}f)\\
&= (y_1, ..., y_m)\\
&= \v y
\end{align*}

\bigskip

\noindent\textbf{(b)} Let $g = \v x^\top \v x = x_1x_1+...+x_mx_m = x_1^2+...+x_m^2$. Then
\begin{align*}
\nabla_{\v x} g &= (\partial_{x_1}g, ..., \partial_{x_m}g)\\
&= (2x_1, ..., 2x_m)\\
&= 2\cdot (x_1,...,x_m)\\
&= 2\v x
\end{align*}

\bigskip

\begin{comment}
%\v x^\top 
 \begin{bmatrix}
    \sum_{i=1}^m A_{1i}x_i  \\
     \sum_{i=1}^m A_{2i}x_i \\
    \vdots \\
     \sum_{i=1}^m A_{mi}x_i
\end{bmatrix}\\
\end{comment}

\noindent\textbf{(c)} Let 
$h = \v x^\top \v A \v x =\sum_{i=1}^m\sum_{j=1}^m x_iA_{ij}x_j$.
 Then
\begin{align*}
\nabla_{\v x} h &= (\partial_{x_1}h, ..., \partial_{x_m}h)\\
&= (\sum_{i=1}^m A_{i1}x_i + \sum_{j=1}^m A_{1j}x_j, ..., \sum_{i=1}^m A_{im}x_i + \sum_{j=1}^m A_{mj}x_j)\\
&= (\sum_{i=1}^m (A_{i1}+A_{1i})x_i ,..., \sum_{i=1}^m (A_{im}+A_{mi}))x_i \qquad \text{ just by reindexing $j$'s with $i$'s}\\
&= (\v A + \v A^\top) \v x
\end{align*}
And thus if $\v A$ is symmetric, $$\nabla_{\v x} h = 2\v A\v x.$$ 
