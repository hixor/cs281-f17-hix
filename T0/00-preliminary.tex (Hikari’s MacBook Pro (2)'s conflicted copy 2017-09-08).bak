\section*{Variance and Covariance}
\begin{problem}
Let $X$ and~$Y$ be two independent random variables.

\begin{enumerate}[label=(\alph*)]
\item Show that the independence of~$X$ and~$Y$ implies that their
covariance is zero.

\item Zero covariance \textit{does not} imply independence between two
      random variables. Give an example of this.

\item For a scalar constant~$a$, show the following two properties:
\begin{align*}
  \E(X + aY) &= \E(X) + a\E(Y)\\
  \var(X + aY) &= \var(X) + a^2\var(Y)
\end{align*}
\end{enumerate}
\end{problem}

\noindent\textbf{Solution}

\noindent\textbf{(a)} \textit{Proof:}
\begin{align*}
cov(X,Y) &= \mathbb{E}((X-\mathbb{E}(X)(Y-\mathbb{E}(Y))\\
&= \mathbb{E}(XY-X\mathbb{E}(Y)-Y\mathbb{E}(X)+\mathbb{E}(X)\mathbb{E}(Y))\\
&= \mathbb{E}(XY)-\mathbb{E}(X)\mathbb{E}(Y)\\
&= \mathbb{E}(X)\mathbb{E}(Y) - \mathbb{E}(X)\mathbb{E}(Y) \quad \text{since $\mathbb{E}(XY) = \mathbb{E}(X)\mathbb{E}(Y)$ when $X,Y$ are independent}\\
&= 0
\end{align*}\qed

\medskip

\noindent \textbf{(b)} Let $X=Z, Y=Z^2,$ and $\mathbb{E}(Z) = 0 = \mathbb{E}(Z^3)$. Then
\begin{align*}
cov(X,Y) &= \mathbb{E}(z\cdot z^2)- \mathbb{E}(z)\mathbb{E}(z^2)\\
&=\mathbb{E}(Z^3) - \mathbb{E}(z)\mathbb{E}(z^2)\\
&= 0
\end{align*}

but $X,Y$ are not at all independent-- indeed, they're highly dependent.\qed

\medskip

\noindent\textbf{(c)} \textit{Proof:}
\begin{align*}
\mathbb{E}(X+aY) &= \sum_x \sum_y (x+ay)P(X=x,Y=y)\\
&=\sum_x \sum_y xP(X=x,Y=y) + \sum_x\sum_y ayP(X=x,Y=y)\\
&= \sum_x\sum_y xP(X=x,Y=y)+\sum_y\sum_x ayP(X=x,Y=y)\\ &\qquad \text{ just switching the order of sums in the second term}\\
&= \sum_x x \sum_y P(X=x,Y=y)+a\sum_y y\sum_x P(X=x,Y=y)\\ &\qquad \text{ to reflect correct variables being summed over, and since $a$ is a constant}\\
&= \sum_x xP(X=x) + a\sum_y yP(Y=y)\\
&= \mathbb{E}(X) + a\mathbb{E}(Y)
\end{align*}\qed

\medskip

\begin{align*}
\var(X+aY) &= \mathbb{E}(((X+aY)-\mathbb{E}(X+aY))^2)\\
&=\mathbb{E}(((X+aY)-(\mathbb{E}(X) + a\mathbb{E}(Y)))^2) \quad \text{by linearity of expectations (above)}\\
&= \mathbb{E}(((X-\mathbb{E}(X))+a(Y-\mathbb{E}(Y)))^2)\\
&= \mathbb{E}((X-\mathbb{E}X)^2 + 2a(X-\mathbb{E}X)(Y-\mathbb{E}Y) + a^2(Y-\mathbb{E}Y)^2) \\
&\qquad \text{ where I've at this point switched notation such that $\mathbb{E}Z = \mathbb{E}(Z)$, since the brackets}\\
&\qquad \text{ are getting confusingly messy}\\
&= \mathbb{E}(X-\mathbb{E}X)^2+ 2a\mathbb{E}(X-\mathbb{E}X)(Y-\mathbb{E}Y) + a^2\mathbb{E}(Y-\mathbb{E}Y)^2 \quad \text{by linearity}\\
&= \mathbb{E}(X-\mathbb{E}X)^2+ a^2\mathbb{E}(Y-\mathbb{E}Y)^2 \\
&\qquad \text{since the middle term is the covariance, which is 0 for $X,Y$ independent}\\
&= \var(X)+a^2\var(Y)
\end{align*}\qed
